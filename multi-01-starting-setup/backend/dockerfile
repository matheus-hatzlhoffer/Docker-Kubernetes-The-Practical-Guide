FROM node

WORKDIR /app

COPY package.json .

RUN npm install

COPY . .

ARG DEFAULT_PORT=80

# ARG DEFAULT_DATABASE=mongodb

# ARG DEFAULT_DATBASE_USER=admin

# ARG DEFAULT_DATBASE_PASSWORD=secret

ENV PORT $DEFAULT_PORT

ENV MONGO_INITDB_ROOT_URL=mongodb

ENV MONGO_INITDB_ROOT_USERNAME=admin

ENV MONGO_INITDB_ROOT_PASSWORD=secret

EXPOSE $PORT

CMD [ "npm", "start" ]